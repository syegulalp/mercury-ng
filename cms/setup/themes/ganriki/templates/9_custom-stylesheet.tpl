    }
}

.fill {
    background-position-y: 33%;
}

.fill-center {
    background-position-y: 50%;
}

.fill-top {
    background-position-y: 0%;
}

.fill-bottom{
    background-position-y: 100%;
}

.carousel-new .carousel-control {
    width: 32px;
}

