body {
    font-size: 1.66rem;
}

div#series-box li {
    padding-bottom: 8px;
}

.disable-text {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;
    cursor: default;
}

.c-fix {
    position: relative;
}

.carousel-caption {
    text-shadow: 2px 2px #202020;
    background: rgba(0,0,0,.50);
    padding-left: 15px;
    padding-right: 15px;
    bottom: 40px;
}

.carousel-caption a {
    color: yellow;
}

.img-caption {
    position: absolute;
    right: 8px;
    bottom: 8px;
    color: #d0d000;
    text-shadow: 0px 0px 2px rgba(0,0,0,1);
    background-color: rgba(0, 0, 0, 0.3);
    padding: 0 8px 0 8px;
	max-width:50%;
}

.img-caption-inverse {
    color: black;
    text-shadow: 0px 0px 2px rgba(192,192,0,0.7);
}

.img-caption-sm {
    font-size: 12px;
    position: absolute;
    bottom: 8px;
    right: -12px;
    margin-left: 12px;
    text-align: right;
    color: #d0d000;
    text-shadow: 0px 0px 2px rgba(0,0,0,1);
    max-width: inherit;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 0px 3px 0px 3px;
    margin-right: 24px;
}

.x-img-caption-sm {
    font-size: 11px;
    font-weight: bold;
    text-align: center;
}

.screenshot {
    position: relative;
    margin: 18px 0 18px 0;
    text-align: center;
}

.screenshot p {
    margin-left: 13%;
    margin-right: 13%;
    margin-top: 4px;
    font-size: small;
    font-weight: bold;
}

.screenshot img {
    width: 100%;
}

figure .screenshot img {
	width: 100%
}

.screenshot-double img {
    max-width: 49.5%;
}

figure .screenshot-double img {
    max-width: 49.5%;
}

.screenshot figcaption {
	margin-left: 25%;
    margin-right: 25%;
    margin-top: 4px;
    font-size: small;
    font-weight: bold;
}

.screenshot figcaption .copyright {
    position: static;
    color: #a0a0a0;
    font-size: 12px;
    margin-bottom: 0px;
    background-color: rgba(255, 255, 255, 0);
    text-shadow: none;
}

.screenshot-center{
    width:66%;
margin-left: auto;
margin-right: auto;
}

.screenshot-center img {
    max-width:100%;
}
// I think this one is deprecated
.screenshot-double .img-caption {
    position: static;
    color: #a0a0a0;
    font-size: 16px;
    margin-bottom: 0px;
    background-color: rgba(255, 255, 255, 0);
    text-shadow: none;
}

.carousel-caption h1 {
    font-weight: bold;
}

.page-header {
    font-weight: bold;
}

.amazon-product {
    max-width: 200px;
}

.amazon-product img {
    margin: 4px;
}

.screenshot .screenshot-inner {
    position: relative;
}

.navbar p {
    color: #999999;
}

.yellow-link a {
    color: white;
}

@media (max-width: 767px) {

    #search-form {
        padding-left: 10px;
        padding-right: 10px;
    }

    .screenshot p {
        margin-left: 4px;
        margin-right: 4px;
    }

    .carousel {
        x-zoom: 70%;
        max-height: 500px;
        min-height: 300px;
    }
}

@media (min-width: 1200px) {
.carousel {
height:66%;
}
}

